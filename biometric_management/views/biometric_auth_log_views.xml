<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- VISTA FORMULARIO - Log de Autenticación -->
    <!-- ============================================ -->
    
    <record id="view_biometric_auth_log_form" model="ir.ui.view">
        <field name="name">biometric.auth.log.form</field>
        <field name="model">biometric.auth.log</field>
        <field name="arch" type="xml">
            <form string="Log de Autenticación" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group string="Información General">
                            <field name="user_id" readonly="1"/>
                            <field name="device_id" readonly="1"/>
                            <field name="device_name" readonly="1"/>
                            <field name="device_platform" readonly="1"/>
                            <field name="auth_date" readonly="1"/>
                            <field name="success" readonly="1"/>
                            <field name="auth_type" readonly="1"/>
                        </group>
                        
                        <group string="Detalles">
                            <field name="error_code" readonly="1"/>
                            <field name="error_message" readonly="1"/>
                            <field name="ip_address" readonly="1"/>
                            <field name="session_id" readonly="1"/>
                            <field name="duration_ms" readonly="1"/>
                            <field name="user_agent" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Notas">
                        <field name="notes" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISTA ÁRBOL - Logs de Autenticación -->
    <!-- ============================================ -->
    
    <record id="view_biometric_auth_log_tree" model="ir.ui.view">
        <field name="name">biometric.auth.log.tree</field>
        <field name="model">biometric.auth.log</field>
        <field name="arch" type="xml">
            <list string="Historial de Autenticaciones" 
                  create="false" 
                  edit="false"
                  decoration-success="success == True"
                  decoration-danger="success == False">
                
                <field name="auth_date"/>
                <field name="user_id"/>
                <field name="device_name"/>
                <field name="device_platform"/>
                <field name="auth_type"/>
                <field name="success"/>
                <field name="duration_ms"/>
                <field name="error_code" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISTA BÚSQUEDA - Logs de Autenticación -->
    <!-- ============================================ -->
    
    <record id="view_biometric_auth_log_search" model="ir.ui.view">
        <field name="name">biometric.auth.log.search</field>
        <field name="model">biometric.auth.log</field>
        <field name="arch" type="xml">
            <search string="Buscar Autenticaciones">
                <field name="user_id"/>
                <field name="device_name"/>
                
                <filter string="Exitosas" name="successful" domain="[('success', '=', True)]"/>
                <filter string="Fallidas" name="failed" domain="[('success', '=', False)]"/>
                
                <group string="Agrupar Por">
                    <filter string="Usuario" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Dispositivo" name="group_device" context="{'group_by': 'device_id'}"/>
                    <filter string="Fecha" name="group_date" context="{'group_by': 'auth_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISTA GRÁFICA -->
    <!-- ============================================ -->
    
    <record id="view_biometric_auth_log_graph" model="ir.ui.view">
        <field name="name">biometric.auth.log.graph</field>
        <field name="model">biometric.auth.log</field>
        <field name="arch" type="xml">
            <graph string="Estadísticas" type="bar">
                <field name="auth_date" type="row" interval="day"/>
                <field name="success" type="col"/>
            </graph>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- ACCIÓN - Logs de Autenticación -->
    <!-- ============================================ -->
    
    <record id="action_biometric_auth_log" model="ir.actions.act_window">
        <field name="name">Historial de Autenticaciones</field>
        <field name="res_model">biometric.auth.log</field>
        <field name="view_mode">list,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay autenticaciones registradas
            </p>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- ACCIÓN - Logs por Dispositivo -->
    <!-- ============================================ -->
    
    <record id="action_biometric_auth_log_by_device" model="ir.actions.act_window">
        <field name="name">Autenticaciones del Dispositivo</field>
        <field name="res_model">biometric.auth.log</field>
        <field name="view_mode">list,form,graph</field>
        <field name="domain">[('device_id', '=', active_id)]</field>
        <field name="context">{'default_device_id': active_id}</field>
    </record>

</odoo>