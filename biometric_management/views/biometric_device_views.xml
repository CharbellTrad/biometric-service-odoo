<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- VISTA FORMULARIO - Dispositivo Biométrico -->
    <!-- ============================================ -->
    
    <record id="view_biometric_device_form" model="ir.ui.view">
        <field name="name">biometric.device.form</field>
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <form string="Dispositivo Biométrico">
                <header>
                    <button name="action_activate" 
                            string="Activar" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state == 'active'"/>
                    
                    <button name="action_revoke" 
                            string="Revocar Acceso" 
                            type="object" 
                            class="btn-secondary"
                            confirm="¿Está seguro de revocar el acceso a este dispositivo?"
                            invisible="state == 'revoked'"/>
                    
                    <field name="state" widget="statusbar" 
                           statusbar_visible="active,inactive,revoked"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                        
                        <button name="%(action_biometric_auth_log_by_device)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-history">
                            <field name="auth_count" widget="statinfo" 
                                   string="Autenticaciones"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="device_name" placeholder="Nombre del dispositivo"/>
                        </h1>
                        <h3>
                            <field name="user_id" readonly="1"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Información del Dispositivo">
                            <field name="device_id" readonly="1"/>
                            <field name="platform"/>
                            <field name="os_version"/>
                            <field name="brand"/>
                            <field name="model_name"/>
                            <field name="is_physical_device"/>
                        </group>
                        
                        <group string="Información Biométrica">
                            <field name="biometric_type"/>
                            <field name="biometric_type_display"/>
                            <field name="is_enabled"/>
                            <field name="employee_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Fechas y Actividad">
                            <field name="enrolled_at" readonly="1"/>
                            <field name="last_used_at" readonly="1"/>
                            <field name="last_auth_date" readonly="1"/>
                            <field name="days_since_last_use" readonly="1"/>
                        </group>
                        
                        <group string="Revocación" invisible="state != 'revoked'">
                            <field name="revoked_at" readonly="1"/>
                            <field name="revoked_by" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Información Técnica">
                            <group>
                                <field name="device_info_json" placeholder="{}"/>
                            </group>
                        </page>
                        
                        <page string="Notas">
                            <field name="notes" placeholder="Notas adicionales..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISTA ÁRBOL - Dispositivos Biométricos -->
    <!-- ============================================ -->
    
    <record id="view_biometric_device_tree" model="ir.ui.view">
        <field name="name">biometric.device.tree</field>
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <list string="Dispositivos Biométricos" 
                  decoration-success="state == 'active'"
                  decoration-warning="state == 'inactive'"
                  decoration-danger="state == 'revoked'">
                
                <field name="device_name"/>
                <field name="user_id"/>
                <field name="platform"/>
                <field name="biometric_type_display"/>
                <field name="enrolled_at"/>
                <field name="last_used_at"/>
                <field name="days_since_last_use"/>
                <field name="auth_count"/>
                <field name="state"/>
                <field name="is_enabled"/>
            </list>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISTA BÚSQUEDA - Dispositivos Biométricos -->
    <!-- ============================================ -->
    
    <record id="view_biometric_device_search" model="ir.ui.view">
        <field name="name">biometric.device.search</field>
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <search string="Buscar Dispositivos">
                <field name="device_name"/>
                <field name="user_id"/>
                <field name="platform"/>
                
                <filter string="Activos" name="active_devices" domain="[('state', '=', 'active')]"/>
                <filter string="Inactivos" name="inactive_devices" domain="[('state', '=', 'inactive')]"/>
                <filter string="Revocados" name="revoked_devices" domain="[('state', '=', 'revoked')]"/>
                
                <filter string="iOS" name="ios_devices" domain="[('platform', '=', 'ios')]"/>
                <filter string="Android" name="android_devices" domain="[('platform', '=', 'android')]"/>
                
                <group string="Agrupar Por">
                    <filter string="Usuario" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Plataforma" name="group_platform" context="{'group_by': 'platform'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- ACCIÓN - Dispositivos Biométricos -->
    <!-- ============================================ -->
    
    <record id="action_biometric_device" model="ir.actions.act_window">
        <field name="name">Dispositivos Biométricos</field>
        <field name="res_model">biometric.device</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active_devices': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay dispositivos biométricos registrados
            </p>
            <p>
                Los dispositivos se registran automáticamente desde la aplicación móvil.
            </p>
        </field>
    </record>

</odoo>