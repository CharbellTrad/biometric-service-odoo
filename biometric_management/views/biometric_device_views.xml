<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- VISTA FORMULARIO - Dispositivo Biom√©trico -->
    <!-- ============================================ -->
    
    <record id="view_biometric_device_form" model="ir.ui.view">
        <field name="name">biometric.device.form</field>
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <form string="Dispositivo Biom√©trico">
                <header>
                    <button name="action_activate" 
                            string="Activar" 
                            type="object" 
                            class="oe_highlight btn-success"
                            icon="fa-check"
                            invisible="state == 'active'"/>
                    
                    <button name="action_revoke" 
                            string="Revocar Acceso" 
                            type="object" 
                            class="btn-danger"
                            icon="fa-ban"
                            confirm="¬øEst√° seguro de revocar el acceso a este dispositivo? El usuario no podr√° usar biometr√≠a hasta volver a registrarse."
                            invisible="state == 'revoked'"/>
                    
                    <field name="state" widget="statusbar" 
                           statusbar_visible="active,inactive,revoked"/>
                </header>
                
                <sheet>
                    <!-- Badges de estado -->
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                        
                        <button class="oe_stat_button" 
                                icon="fa-check-circle" 
                                type="object"
                                invisible="not is_recently_used">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text text-success">Activo</span>
                                <span class="o_stat_text">√öltimas 24h</span>
                            </div>
                        </button>
                        
                        <button class="oe_stat_button" 
                                icon="fa-exclamation-triangle" 
                                type="object"
                                invisible="not is_stale">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text text-warning">Inactivo</span>
                                <span class="o_stat_text">&gt;30 d√≠as</span>
                            </div>
                        </button>
                        
                        <button name="%(action_biometric_auth_log_by_device)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-history">
                            <field name="auth_count" widget="statinfo" 
                                   string="Autenticaciones"/>
                        </button>
                    </div>
                    
                    <!-- Ribbon de estado -->
                    <widget name="web_ribbon" title="Revocado" 
                            bg_color="bg-danger"
                            invisible="state != 'revoked'"/>
                    
                    <widget name="web_ribbon" title="Activo" 
                            bg_color="bg-success"
                            invisible="state != 'active'"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="device_name" placeholder="Nombre del dispositivo"/>
                        </h1>
                        <h3>
                            <field name="user_id" readonly="1"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="üì± Informaci√≥n del Dispositivo">
                            <field name="device_id" readonly="1" widget="char"/>
                            <field name="platform" widget="badge" 
                                   decoration-info="platform == 'ios'"
                                   decoration-success="platform == 'android'"
                                   decoration-warning="platform == 'web'"/>
                            <field name="os_version"/>
                            <field name="brand"/>
                            <field name="model_name"/>
                            <field name="is_physical_device" widget="boolean_toggle"/>
                        </group>
                        
                        <group string="üîê Informaci√≥n Biom√©trica">
                            <field name="biometric_type" widget="badge"
                                   decoration-info="biometric_type == 'facial_recognition'"
                                   decoration-success="biometric_type == 'fingerprint'"
                                   decoration-warning="biometric_type == 'iris'"/>
                            <field name="biometric_type_display"/>
                            <field name="is_enabled" widget="boolean_toggle"/>
                            <field name="employee_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="üìÖ Fechas y Actividad">
                            <field name="enrolled_at" readonly="1" widget="datetime"/>
                            <field name="last_used_at" readonly="1" widget="datetime"/>
                            <field name="last_auth_date" readonly="1" widget="datetime"/>
                            <field name="days_since_last_use" readonly="1" 
                                   widget="integer"
                                   decoration-success="days_since_last_use &lt; 7"
                                   decoration-warning="days_since_last_use &gt;= 7 and days_since_last_use &lt; 30"
                                   decoration-danger="days_since_last_use &gt;= 30"/>
                        </group>
                        
                        <group string="üö´ Revocaci√≥n" 
                               invisible="state != 'revoked'">
                            <field name="revoked_at" readonly="1" widget="datetime"/>
                            <field name="revoked_by" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="üìä Informaci√≥n T√©cnica" icon="fa-code">
                            <group>
                                <field name="device_info_json" 
                                       widget="ace" 
                                       options="{'mode': 'json'}"
                                       placeholder="{}"/>
                            </group>
                        </page>
                        
                        <page string="üìù Notas" icon="fa-sticky-note">
                            <field name="notes" placeholder="Notas adicionales sobre este dispositivo..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISTA √ÅRBOL - Dispositivos Biom√©tricos -->
    <!-- ============================================ -->
    
    <record id="view_biometric_device_tree" model="ir.ui.view">
        <field name="name">biometric.device.tree</field>
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <list string="Dispositivos Biom√©tricos" 
                  decoration-success="is_recently_used == True and state == 'active'"
                  decoration-warning="is_stale == True and state == 'active'"
                  decoration-danger="state == 'revoked'"
                  decoration-muted="state == 'inactive'"
                  default_order="last_used_at desc">
                
                <field name="device_name" string="Dispositivo"/>
                <field name="user_id" string="Usuario"/>
                <field name="platform" widget="badge" 
                       decoration-info="platform == 'ios'"
                       decoration-success="platform == 'android'"
                       decoration-warning="platform == 'web'"/>
                <field name="biometric_type_display" string="Biometr√≠a"/>
                <field name="enrolled_at" string="Registrado" widget="datetime"/>
                <field name="last_used_at" string="√öltimo Uso" widget="datetime"/>
                <field name="days_since_last_use" string="D√≠as Sin Uso"
                       decoration-success="days_since_last_use &lt; 7"
                       decoration-warning="days_since_last_use &gt;= 7 and days_since_last_use &lt; 30"
                       decoration-danger="days_since_last_use &gt;= 30"/>
                <field name="auth_count" string="Autenticaciones"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'inactive'"
                       decoration-danger="state == 'revoked'"/>
                <field name="is_recently_used" column_invisible="1"/>
                <field name="is_stale" column_invisible="1"/>
                <field name="is_enabled" widget="boolean_toggle" string="Habilitado"/>
            </list>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISTA KANBAN - Dispositivos Biom√©tricos -->
    <!-- ============================================ -->
    
    <record id="view_biometric_device_kanban" model="ir.ui.view">
        <field name="name">biometric.device.kanban</field>
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state" quick_create="false">
                <field name="id"/>
                <field name="device_name"/>
                <field name="user_id"/>
                <field name="platform"/>
                <field name="biometric_type_display"/>
                <field name="state"/>
                <field name="is_recently_used"/>
                <field name="is_stale"/>
                <field name="auth_count"/>
                <field name="last_used_at"/>
                <field name="days_since_last_use"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="oe_kanban_details d-flex flex-column">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <t t-if="record.platform.raw_value == 'ios'">
                                                <i class="fa fa-apple me-1" title="iOS"/>
                                            </t>
                                            <t t-if="record.platform.raw_value == 'android'">
                                                <i class="fa fa-android me-1" title="Android"/>
                                            </t>
                                            <t t-if="record.platform.raw_value == 'web'">
                                                <i class="fa fa-globe me-1" title="Web"/>
                                            </t>
                                            <field name="device_name"/>
                                        </strong>
                                    </div>
                                    <field name="state" widget="badge" 
                                           decoration-success="state == 'active'"
                                           decoration-warning="state == 'inactive'"
                                           decoration-danger="state == 'revoked'"/>
                                </div>
                                
                                <div class="o_kanban_record_body">
                                    <div class="mb-1">
                                        <i class="fa fa-user me-1"/>
                                        <field name="user_id"/>
                                    </div>
                                    <div class="mb-1">
                                        <i class="fa fa-fingerprint me-1"/>
                                        <field name="biometric_type_display"/>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="text-muted">
                                            <i class="fa fa-check-circle me-1"/>
                                            <t t-esc="record.auth_count.value"/> usos
                                        </span>
                                    </div>
                                    
                                    <div class="oe_kanban_bottom_right">
                                        <t t-if="record.is_recently_used.raw_value">
                                            <span class="badge text-bg-success">
                                                <i class="fa fa-clock-o me-1"/>Activo
                                            </span>
                                        </t>
                                        <t t-elif="record.is_stale.raw_value">
                                            <span class="badge text-bg-warning">
                                                <i class="fa fa-exclamation me-1"/>
                                                <t t-esc="record.days_since_last_use.value"/>d sin uso
                                            </span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISTA B√öSQUEDA - Dispositivos Biom√©tricos -->
    <!-- ============================================ -->
    
    <record id="view_biometric_device_search" model="ir.ui.view">
        <field name="name">biometric.device.search</field>
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <search string="Buscar Dispositivos">
                <field name="device_name" 
                       string="Dispositivo"
                       filter_domain="['|', ('device_name', 'ilike', self), ('device_id', 'ilike', self)]"/>
                <field name="user_id"/>
                <field name="platform"/>
                <field name="biometric_type"/>
                
                <separator/>
                
                <filter string="Mis Dispositivos" 
                        name="my_devices"
                        domain="[('user_id', '=', uid)]"
                        icon="fa-user"/>
                
                <filter string="Activos" 
                        name="active_devices"
                        domain="[('state', '=', 'active')]"
                        icon="fa-check"/>
                
                <filter string="Inactivos" 
                        name="inactive_devices"
                        domain="[('state', '=', 'inactive')]"
                        icon="fa-pause"/>
                
                <filter string="Revocados" 
                        name="revoked_devices"
                        domain="[('state', '=', 'revoked')]"
                        icon="fa-ban"/>
                
                <separator/>
                
                <filter string="Usados Recientemente" 
                        name="recently_used"
                        domain="[('is_recently_used', '!=', False)]"
                        icon="fa-clock-o"/>
                
                <filter string="Sin Uso (&gt;30 d√≠as)" 
                        name="stale_devices"
                        domain="[('is_stale', '!=', False)]"
                        icon="fa-exclamation-triangle"/>
                
                <separator/>
                
                <filter string="iOS" 
                        name="ios_devices"
                        domain="[('platform', '=', 'ios')]"
                        icon="fa-apple"/>
                
                <filter string="Android" 
                        name="android_devices"
                        domain="[('platform', '=', 'android')]"
                        icon="fa-android"/>
                
                <separator/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Usuario" 
                            name="group_user"
                            context="{'group_by': 'user_id'}"/>
                    <filter string="Plataforma" 
                            name="group_platform"
                            context="{'group_by': 'platform'}"/>
                    <filter string="Estado" 
                            name="group_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Tipo Biom√©trico" 
                            name="group_biometric_type"
                            context="{'group_by': 'biometric_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- ACCI√ìN - Dispositivos Biom√©tricos -->
    <!-- ============================================ -->
    
    <record id="action_biometric_device" model="ir.actions.act_window">
        <field name="name">Dispositivos Biom√©tricos</field>
        <field name="res_model">biometric.device</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_my_devices': 1, 'search_default_active_devices': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay dispositivos biom√©tricos registrados
            </p>
            <p>
                Los dispositivos se registran autom√°ticamente desde la aplicaci√≥n m√≥vil
                cuando un usuario habilita la autenticaci√≥n biom√©trica.
            </p>
        </field>
    </record>

</odoo>